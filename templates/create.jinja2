{% extends 'base.jinja2' %}

{% block subtitle %}Make a Donation{% endblock subtitle %}

{% block content %}
<div class="col-md-3 mt-4">
<form method="POST">
    <label for="name-input">Donor Name:</label>
    <input id="name-input" type="text" name="name"><br>
    <label for="donation-input">Donation Amount:</label>
    <input id="donation-input" type="number" name="donation"><br>
    <input type="submit" value="Make Donation">
</form>
</div>
{% endblock content %}